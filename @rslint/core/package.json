{
  "name": "@rslint/core",
  "version": "0.1.7",
  "exports": {
    ".": "./dist/index.js",
    "./bin": "./bin/rslint.cjs",
    "./package.json": "./package.json"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/web-infra-dev/rslint"
  },
  "files": [
    "bin/rslint.cjs"
  ],
  "bin": {
    "rslint": "./bin/rslint.cjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "description": "rslint cli",
  "publisher": "rslint",
  "keywords": [
    "rslint",
    "linter",
    "typescript",
    "go"
  ],
  "devDependencies": {
    "@types/node": "24.0.14",
    "typescript": "5.8.3"
  },
  "optionalDependencies": {
    "@rslint/darwin-x64": "0.1.7",
    "@rslint/darwin-arm64": "0.1.7",
    "@rslint/linux-arm64": "0.1.7",
    "@rslint/linux-x64": "0.1.7",
    "@rslint/win32-arm64": "0.1.7",
    "@rslint/win32-x64": "0.1.7"
  },
  "scripts": {
    "build:bin": "go build -v -o bin/rslint ../../cmd/rslint",
    "build:debug": "GOEXPERIMENT=noregabi go build -v -gcflags='all=-N -l' -o  bin/rslint ../../cmd/rslint ",
    "build:js": "tsc -b tsconfig.build.json --force",
    "dev": "tsc -b tsconfig.build.json --force --watch",
    "build": "pnpm build:bin && pnpm build:js",
    "test": "rstest run",
    "test:update": "rstest run -u"
  }
}